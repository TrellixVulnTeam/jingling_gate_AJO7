<% @posts.each do |post| %>
<div class="blog_container container topSpace">
  <div class="blog_content">
    <h5 class="text-center"><i><%= post.created_at.to_date.to_formatted_s(:long) %></i></h5>
    <div class="page-header text-center">
      <h1><a href="/blog/posts/<%= post.id %>"><%= post.title %></a></h1>
      <hr>
    </div>
    <p class="blog_body">
      <%= truncate_html(post.body, length: 400) %>
    </p>
    <h2><a href="/blog/posts/<%= post.id %>">Read more...</a></h2>
  </div>
</div>
