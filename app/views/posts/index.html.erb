<div class="container">
  <header class="row">
    <h2 class="logo col-md-2 col-md-offset-1">
      <a href="#"><%= image_tag "JGlogo3.png", class: "logo" %></a>
    </h2>
    <h2 class="jg_logo col-md-8"><%= image_tag "JinglingGate2.png", class: "jg_logo" %></h2>
  </header>


  <% @posts.each do |post| %>
    <div class="blog_container row">
      <div class="blog_date col-md-2 col-md-offset-1">
        <%= post.created_at.to_date.to_formatted_s(:long) %>
      </div>
      <div class="blog_content col-md-8">
        <h1 class="blog_title">
          <a href="/posts/<%= post.id %>"><%= post.title %></a>
        </h1>
        <p class="blog_body">
          <%= post.body %>
        </p>
      </div>
    </div>
        <!--<td><#%= link_to 'Show', post %></td>
        <td><#%= link_to 'Edit', edit_post_path(post) %></td>
        <td><#%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
  <% end %>
</div>

