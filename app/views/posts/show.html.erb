<div class="container">
  <%= render 'header' %>
  <!--<p id="notice"><#%= notice %></p>-->

  <div class="row">
    <div class="col-md-2 col-md-offset-1"></div>
    <h2 class="blog_title col-md-8"><%= link_to_unless_current @post.title, @post %></h2>
  </div>
  <div class="row">
    <div class="blog_date col-md-2 col-md-offset-1">
      <%= image_tag @user.avatar_url(:profile_face) %><br/>
      <p class="user_info"><em>by</em> <%= @user.first_name + " " %><%= @user.last_name %></p>
      <p class="user_info"><%= @post.created_at.to_date.to_formatted_s(:long) %></p>
    </div>
    <div class="show_blog_body col-md-8">
      <%= raw(@post.body) %>

      <!--<#%= link_to 'Edit', edit_post_path(@post)%> |
      <#%= link_to 'Back', posts_path %>-->
    </div>
  </div>
</div>
