<div class="container topSpace">

  <div class="row">
    <div class="user_name col-md-2 col-md-offset-1">
      <%= image_tag @user.avatar_url(:profile_face) %><br/>
      <%= @user.first_name + " " %><%= @user.last_name %>
    </div>
  </div>

  <% @user.posts do |post| %>
    <div class="blog_container row">
      <div class="blog_date col-md-2 col-md-offset-1">
        <%= post.created_at.to_date.to_formatted_s(:long) %>
      </div>
      <div class="blog_content col-md-8">
        <h1 class="blog_title">
          <a href="/blog/posts/<%= post.id %>"><%= post.title %></a>
        </h1>
        <p class="blog_body">
          <%= post.body %><br />
        </p>
        <%= link_to 'Edit', edit_blog_post_path(post)%> |
        <%= link_to 'Back', blog_posts_path %>
      </div>
    </div>
  <% end %>
</div>

